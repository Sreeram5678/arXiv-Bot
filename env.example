# ArXiv Bot Environment Variables
# Copy this file to .env and fill in your values

# ArXiv Configuration
ARXIV_CATEGORIES="cs.AI,cs.LG,cs.CL"
ARXIV_KEYWORDS="transformer,neural network,deep learning,machine learning"
ARXIV_MAX_PAPERS="10"
ARXIV_FREQUENCY="daily"

# Email Configuration
EMAIL_ENABLED="false"
SMTP_SERVER="smtp.gmail.com"
SMTP_PORT="587"
SENDER_EMAIL="your-email@gmail.com"
SENDER_PASSWORD="your-app-password"
RECIPIENT_EMAIL="recipient@gmail.com"

# Telegram Configuration
TELEGRAM_ENABLED="false"
TELEGRAM_BOT_TOKEN="your-bot-token-from-botfather"
TELEGRAM_CHAT_ID="your-chat-id"

# Slack Configuration
SLACK_ENABLED="false"
SLACK_WEBHOOK_URL="your-slack-webhook-url"
SLACK_CHANNEL="#research"

# AI Model Configuration
SUMMARIZER_MODEL="facebook/bart-large-cnn"
# SUMMARIZER_API_KEY="your-openai-api-key"  # If using external APIs

# Bot Configuration
LOG_LEVEL="INFO"
TIMEZONE="UTC"
